<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="slickstring.myapplication" >

    <uses-sdk   android:minSdkVersion="15"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".Login"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Edit_Bio"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_edit__bio"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".role_select"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_role_select"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".Waiting"
            android:label="@string/title_activity_waiting"
            android:parentActivityName=".role_select" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="slickstring.myapplication.role_select" />
        </activity>
    </application>

</manifest>
