<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="slickstring.myapplication" >

    <uses-sdk android:minSdkVersion="15" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/FullscreenTheme" >
        <activity
            android:name=".login"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Login"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".create_bio"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_edit__bio"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".role_select"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Select role"
            android:parentActivityName=".login"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name=".waiting"
            android:label="@string/title_activity_waiting"
            android:parentActivityName=".role_select" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="slickstring.myapplication.role_select" />
        </activity>
        <activity
            android:name=".Main"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".edit_profile"
            android:label="@string/title_activity_edit_profile" >
        </activity>
        <activity
            android:name=".Conversations"
            android:label="@string/title_activity_conversations"
            android:parentActivityName=".waiting" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="slickstring.myapplication.waiting" />
        </activity>
        <activity
            android:name=".driver_message"
            android:label="@string/title_activity_driver_message"
            android:parentActivityName=".Conversations" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="slickstring.myapplication.Conversations" />
        </activity>
        <activity
            android:name=".list_drivers"
            android:label="@string/title_activity_list_drivers"
            android:parentActivityName=".role_select" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="slickstring.myapplication.role_select" />
        </activity>
        <activity
            android:name=".passenger_message"
            android:label="@string/title_activity_passenger_message"
            android:parentActivityName=".list_drivers" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="slickstring.myapplication.list_drivers" />
        </activity>
        <activity
            android:name=".view_profile"
            android:label="@string/title_activity_view_profile" >
        </activity>
    </application>

</manifest>
