<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="slickstring.myapplication.role_select"
    android:background="@color/background">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:text="I am a..."
        android:id="@+id/textView"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver"
        android:id="@+id/driverButton"
        android:onClick="amDriver"
        android:layout_marginTop="70dp"
        android:layout_below="@+id/textView"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:layout_alignRight="@+id/passengerButton"
        android:layout_alignEnd="@+id/passengerButton"
        android:layout_alignLeft="@+id/passengerButton"
        android:layout_alignStart="@+id/passengerButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passenger"
        android:id="@+id/passengerButton"
        android:onClick="amPassenger"
        android:layout_below="@+id/driverButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="102dp"
        style="@style/Base.TextAppearance.AppCompat.Display1" />


</RelativeLayout>
